local StudiosLib = {}
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local HttpService = game:GetService("HttpService")
local Mouse = LocalPlayer:GetMouse()

-- Config Management
local Config = {}
local ConfigFile = "StudiosLib_Config.json"

local function SaveToFile()
    if writefile then
        local success, result = pcall(function()
            return HttpService:JSONEncode(Config)
        end)
        if success then
            writefile(ConfigFile, result)
        end
    end
end

local function LoadFromFile()
    if readfile and isfile and isfile(ConfigFile) then
        local success, result = pcall(function()
            local content = readfile(ConfigFile)
            return HttpService:JSONDecode(content)
        end)
        if success then
            Config = result
        end
    end
end

LoadFromFile()

function StudiosLib:SetConfigFile(name)
    ConfigFile = name .. ".json"
    LoadFromFile()
end

function StudiosLib:CreateWindow(title)
    -- Clean up old GUI
    local old = game:GetService("CoreGui"):FindFirstChild("StudiosLib")
    if old then old:Destroy() end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "StudiosLib"
    ScreenGui.Parent = game:GetService("CoreGui")
    ScreenGui.ResetOnSpawn = false

    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 520, 0, 340)
    MainFrame.Position = UDim2.new(0.5, -260, 0.5, -170)
    MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    MainFrame.ClipsDescendants = true

    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 8)
    UICorner.Parent = MainFrame

    -- Header
    local Header = Instance.new("Frame")
    Header.Name = "Header"
    Header.Size = UDim2.new(1, 0, 0, 35)
    Header.BackgroundTransparency = 1
    Header.Parent = MainFrame

    local HeaderTitle = Instance.new("TextLabel")
    HeaderTitle.Size = UDim2.new(1, -90, 1, 0)
    HeaderTitle.Position = UDim2.new(0, 15, 0, 0)
    HeaderTitle.BackgroundTransparency = 1
    HeaderTitle.Text = title or "YouTube / @StudiosRaw | Libary By Studios Raw."
    HeaderTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    HeaderTitle.TextXAlignment = Enum.TextXAlignment.Left
    HeaderTitle.Font = Enum.Font.GothamBold
    HeaderTitle.TextSize = 18
    HeaderTitle.Parent = Header

    -- Buttons Container
    local BtnContainer = Instance.new("Frame")
    BtnContainer.Size = UDim2.new(0, 70, 0, 20)
    BtnContainer.Position = UDim2.new(1, -75, 0.5, -10)
    BtnContainer.BackgroundTransparency = 1
    BtnContainer.Parent = Header

    -- Close Button
    local CloseBtnTop = Instance.new("TextButton")
    CloseBtnTop.Size = UDim2.new(0, 24, 0, 24)
    CloseBtnTop.Position = UDim2.new(1, -28, 0.5, -12)
    CloseBtnTop.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
    CloseBtnTop.Text = "x"
    CloseBtnTop.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseBtnTop.Font = Enum.Font.GothamBold
    CloseBtnTop.TextSize = 14
    CloseBtnTop.Parent = Header

    local CloseCornerTop = Instance.new("UICorner")
    CloseCornerTop.CornerRadius = UDim.new(1, 0)
    CloseCornerTop.Parent = CloseBtnTop

    -- Minimize Button
    local MinBtn = Instance.new("TextButton")
    MinBtn.Size = UDim2.new(0, 24, 0, 24)
    MinBtn.Position = UDim2.new(1, -56, 0.5, -12)
    MinBtn.BackgroundColor3 = Color3.fromRGB(240, 200, 0)
    MinBtn.Text = "-"
    MinBtn.TextColor3 = Color3.fromRGB(0, 0, 0)
    MinBtn.Font = Enum.Font.GothamBold
    MinBtn.TextSize = 18
    MinBtn.Parent = Header

    local MinCorner = Instance.new("UICorner")
    MinCorner.CornerRadius = UDim.new(1, 0)
    MinCorner.Parent = MinBtn

    -- Logic for Minimize/Restore
    local minimized = false
    local originalSize = MainFrame.Size

    local function toggleMinimize()
        minimized = not minimized
        if minimized then
            TweenService:Create(MainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 500, 0, 35)}):Play()
            MinBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Verde ao minimizar
            MinBtn.Text = "+"
            MinBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        else
            TweenService:Create(MainFrame, TweenInfo.new(0.3), {Size = originalSize}):Play()
            MinBtn.BackgroundColor3 = Color3.fromRGB(240, 200, 0) -- Amarelo original
            MinBtn.Text = "-"
            MinBtn.TextColor3 = Color3.fromRGB(0, 0, 0)
        end
    end

    MinBtn.MouseButton1Click:Connect(toggleMinimize)
    CloseBtnTop.MouseButton1Click:Connect(function() ScreenGui:Destroy() end)

    -- Dragging Logic
    local dragging, dragInput, dragStart, startPos
    Header.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    -- User Profile Panel
    local UserPanel = Instance.new("Frame")
    UserPanel.Name = "UserPanel"
    UserPanel.Size = UDim2.new(0, 110, 0, 35)
    UserPanel.Position = UDim2.new(0, 5, 1, -45)
    UserPanel.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    UserPanel.Parent = MainFrame

    local UserCorner = Instance.new("UICorner")
    UserCorner.CornerRadius = UDim.new(0, 8)
    UserCorner.Parent = UserPanel

    local UserImage = Instance.new("ImageLabel")
    UserImage.Size = UDim2.new(0, 25, 0, 25)
    UserImage.Position = UDim2.new(0, 5, 0.5, -12)
    UserImage.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    UserImage.BackgroundTransparency = 0
    UserImage.Parent = UserPanel

    local ImgCorner = Instance.new("UICorner")
    ImgCorner.CornerRadius = UDim.new(1, 0)
    ImgCorner.Parent = UserImage

    local UserName = Instance.new("TextLabel")
    UserName.Size = UDim2.new(1, -40, 1, 0)
    UserName.Position = UDim2.new(0, 35, 0, 0)
    UserName.BackgroundTransparency = 1
    UserName.Text = LocalPlayer.DisplayName or LocalPlayer.Name
    UserName.TextColor3 = Color3.fromRGB(255, 255, 255)
    UserName.Font = Enum.Font.GothamBold
    UserName.TextSize = 12
    UserName.TextXAlignment = Enum.TextXAlignment.Left
    UserName.Parent = UserPanel

    -- Avatar Loading
    task.spawn(function()
        local content, isReady = Players:GetUserThumbnailAsync(LocalPlayer.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size48x48)
        if isReady then
            UserImage.Image = content
        end
    end)

    -- Sidebar (Abas) - Ajustado para dar espaço ao UserPanel
    local TabBar = Instance.new("ScrollingFrame")
    TabBar.Name = "TabBar"
    TabBar.Size = UDim2.new(0, 110, 1, -100)
    TabBar.Position = UDim2.new(0, 5, 0, 45)
    TabBar.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    TabBar.BackgroundTransparency = 1
    TabBar.ScrollBarThickness = 0
    TabBar.Parent = MainFrame

    local TabListLayout = Instance.new("UIListLayout")
    TabListLayout.Padding = UDim.new(0, 5)
    TabListLayout.Parent = TabBar

    -- Pages Container
    local Pages = Instance.new("Frame")
    Pages.Name = "Pages"
    Pages.Size = UDim2.new(1, -135, 1, -55)
    Pages.Position = UDim2.new(0, 125, 0, 45)
    Pages.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    Pages.Parent = MainFrame

    local PagesCorner = Instance.new("UICorner")
    PagesCorner.CornerRadius = UDim.new(0, 8)
    PagesCorner.Parent = Pages

    -- Hide GUI Hint (Parented to MainFrame so it follows dragging)
    local HideHint = Instance.new("TextLabel")
    HideHint.Size = UDim2.new(0, 200, 0, 20)
    HideHint.Position = UDim2.new(0.5, -100, 1, -25) -- Movi para dentro do frame para teste
    HideHint.Visible = false -- Oculto por padrão para limpar o visual
    HideHint.BackgroundTransparency = 1
    HideHint.Text = "Press 'H' For hide gui"
    HideHint.TextColor3 = Color3.fromRGB(255, 255, 255)
    HideHint.Font = Enum.Font.GothamBold
    HideHint.TextSize = 14
    HideHint.Parent = MainFrame

    UserInputService.InputBegan:Connect(function(input, gpe)
        if not gpe and input.KeyCode == Enum.KeyCode.H then
            MainFrame.Visible = not MainFrame.Visible
        end
    end)

    local WindowFunctions = {}
    local FirstPage = true

    function WindowFunctions:CreateTab(name)
        local TabButton = Instance.new("TextButton")
        TabButton.Size = UDim2.new(1, 0, 0, 35)
        TabButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        TabButton.Text = name
        TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabButton.Font = Enum.Font.GothamBold
        TabButton.TextSize = 16
        TabButton.Parent = TabBar

        local TabCorner = Instance.new("UICorner")
        TabCorner.CornerRadius = UDim.new(0, 10)
        TabCorner.Parent = TabButton

        local Page = Instance.new("ScrollingFrame")
        Page.Size = UDim2.new(1, -20, 1, -40)
        Page.Position = UDim2.new(0, 10, 0, 35)
        Page.BackgroundTransparency = 1
        Page.ScrollBarThickness = 2
        Page.Visible = false
        Page.Parent = Pages

        local PageLayout = Instance.new("UIListLayout")
        PageLayout.Padding = UDim.new(0, 8)
        PageLayout.Parent = Page

        local PageTitle = Instance.new("TextLabel")
        PageTitle.Size = UDim2.new(1, 0, 0, 30)
        PageTitle.Position = UDim2.new(0, 0, 0, 5)
        PageTitle.BackgroundTransparency = 1
        PageTitle.Text = name or "Title"
        PageTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
        PageTitle.Font = Enum.Font.GothamBold
        PageTitle.TextSize = 20
        PageTitle.TextXAlignment = Enum.TextXAlignment.Center -- Centralizado conforme imagem
        PageTitle.Parent = Page

        if FirstPage then
            Page.Visible = true
            TabButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            FirstPage = false
        end

        TabButton.MouseButton1Click:Connect(function()
            for _, v in pairs(Pages:GetChildren()) do
                if v:IsA("ScrollingFrame") then v.Visible = false end
            end
            for _, v in pairs(TabBar:GetChildren()) do
                if v:IsA("TextButton") then v.BackgroundColor3 = Color3.fromRGB(35, 35, 35) end
            end
            Page.Visible = true
            TabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        end)

        local Elements = {}

        function Elements:AddButton(text, flag, callback)
            if type(flag) == "function" then
                callback = flag
                flag = nil
            end

            local ButtonFrame = Instance.new("Frame")
            ButtonFrame.Size = UDim2.new(1, 0, 0, 30)
            ButtonFrame.BackgroundTransparency = 1
            ButtonFrame.Parent = Page

            local Label = Instance.new("TextLabel")
            Label.Size = UDim2.new(1, -60, 1, 0)
            Label.BackgroundTransparency = 1
            Label.Text = text
            Label.TextColor3 = Color3.fromRGB(255, 255, 255)
            Label.Font = Enum.Font.GothamBold
            Label.TextSize = 18
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = ButtonFrame

            local Btn = Instance.new("TextButton")
            Btn.Size = UDim2.new(0, 50, 0, 24)
            Btn.Position = UDim2.new(1, -60, 0.5, -12) -- Alinhado à direita de forma fixa
            Btn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
            Btn.Text = "Off"
            Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            Btn.Font = Enum.Font.GothamBold
            Btn.TextSize = 14
            Btn.Parent = ButtonFrame

            local BtnCorner = Instance.new("UICorner")
            BtnCorner.CornerRadius = UDim.new(1, 0)
            BtnCorner.Parent = Btn

            local state = false
            
            local function update()
                Btn.BackgroundColor3 = state and Color3.fromRGB(0, 200, 100) or Color3.fromRGB(255, 0, 0)
                Btn.Text = state and "On" or "Off"
            end

            if flag and Config[flag] ~= nil then
                state = Config[flag]
                update()
                task.spawn(callback, state)
            end

            Btn.MouseButton1Click:Connect(function()
                state = not state
                update()
                if flag then
                    Config[flag] = state
                    SaveToFile()
                end
                callback(state)
            end)
        end

        function Elements:AddSimpleButton(text, callback)
            local ButtonFrame = Instance.new("Frame")
            ButtonFrame.Size = UDim2.new(1, 0, 0, 30)
            ButtonFrame.BackgroundTransparency = 1
            ButtonFrame.Parent = Page

            local Btn = Instance.new("TextButton")
            Btn.Size = UDim2.new(1, 0, 1, 0)
            Btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            Btn.Text = text
            Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            Btn.Font = Enum.Font.GothamBold
            Btn.TextSize = 16
            Btn.Parent = ButtonFrame

            local BtnCorner = Instance.new("UICorner")
            BtnCorner.CornerRadius = UDim.new(0, 6)
            BtnCorner.Parent = Btn

            Btn.MouseButton1Click:Connect(callback)
        end

        function Elements:AddLabel(text)
            local Label = Instance.new("TextLabel")
            Label.Size = UDim2.new(1, 0, 0, 25)
            Label.BackgroundTransparency = 1
            Label.Text = text
            Label.TextColor3 = Color3.fromRGB(255, 255, 255)
            Label.Font = Enum.Font.GothamBold
            Label.TextSize = 18
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = Page
        end

        function Elements:AddToggle(text, default, flag, callback)
            if type(flag) == "function" then
                callback = flag
                flag = nil
            end

            local ToggleFrame = Instance.new("Frame")
            ToggleFrame.Size = UDim2.new(1, 0, 0, 30)
            ToggleFrame.BackgroundTransparency = 1
            ToggleFrame.Parent = Page

            local Label = Instance.new("TextLabel")
            Label.Size = UDim2.new(1, -40, 1, 0)
            Label.BackgroundTransparency = 1
            Label.Text = text
            Label.TextColor3 = Color3.fromRGB(255, 255, 255)
            Label.Font = Enum.Font.GothamBold
            Label.TextSize = 18
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = ToggleFrame

            local Tgl = Instance.new("TextButton")
            Tgl.Size = UDim2.new(0, 26, 0, 26)
            Tgl.Position = UDim2.new(1, -36, 0.5, -13) -- Alinhado à direita de forma fixa
            Tgl.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            Tgl.Text = "X"
            Tgl.TextColor3 = Color3.fromRGB(0, 0, 0)
            Tgl.Font = Enum.Font.GothamBold
            Tgl.TextSize = 18
            Tgl.Parent = ToggleFrame

            local TglCorner = Instance.new("UICorner")
            TglCorner.CornerRadius = UDim.new(1, 0)
            TglCorner.Parent = Tgl

            local state = default or false
            
            local function update()
                if state then
                    Tgl.BackgroundColor3 = Color3.fromRGB(30, 200, 50) -- Verde Ativo
                    Tgl.TextColor3 = Color3.fromRGB(0, 0, 0) -- X visível
                else
                    Tgl.BackgroundColor3 = Color3.fromRGB(45, 45, 45) -- Cinza Escuro (Inativo)
                    Tgl.TextColor3 = Color3.fromRGB(45, 45, 45) -- Oculta o X
                end
            end

            if flag and Config[flag] ~= nil then
                state = Config[flag]
                update()
                task.spawn(callback, state)
            end
            update()

            Tgl.MouseButton1Click:Connect(function()
                state = not state
                update()
                if flag then
                    Config[flag] = state
                    SaveToFile()
                end
                callback(state)
            end)
        end

        function Elements:AddSlider(text, min, max, default, flag, callback)
            if type(flag) == "function" then
                callback = flag
                flag = nil
            end

            local SliderFrame = Instance.new("Frame")
            SliderFrame.Size = UDim2.new(1, 0, 0, 30)
            SliderFrame.BackgroundTransparency = 1
            SliderFrame.Parent = Page

            local Label = Instance.new("TextLabel")
            Label.Size = UDim2.new(0, 60, 1, 0)
            Label.BackgroundTransparency = 1
            Label.Text = text
            Label.TextColor3 = Color3.fromRGB(255, 255, 255)
            Label.Font = Enum.Font.GothamBold
            Label.TextSize = 18
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = SliderFrame

            local SliderBG = Instance.new("Frame")
            SliderBG.Size = UDim2.new(0, 60, 0, 24)
            SliderBG.Position = UDim2.new(1, -70, 0.5, -12) -- Alinhado à direita de forma fixa
            SliderBG.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            SliderBG.BorderSizePixel = 0
            SliderBG.Parent = SliderFrame

            local SliderBGCorner = Instance.new("UICorner")
            SliderBGCorner.CornerRadius = UDim.new(0, 10)
            SliderBGCorner.Parent = SliderBG

            local ValLabel = Instance.new("TextLabel")
            ValLabel.Size = UDim2.new(1, 0, 1, 0)
            ValLabel.BackgroundTransparency = 1
            ValLabel.Text = string.format("%.1f", default)
            ValLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            ValLabel.Font = Enum.Font.GothamBold
            ValLabel.TextSize = 14
            ValLabel.Parent = SliderBG

            local currentValue = default

            local function move(input)
                local pos = math.clamp((input.Position.X - SliderBG.AbsolutePosition.X) / SliderBG.AbsoluteSize.X, 0, 1)
                local value = min + (max - min) * pos
                ValLabel.Text = string.format("%.1f", value)
                currentValue = value
                callback(value)
            end

            local function updateVisuals(val)
                ValLabel.Text = string.format("%.1f", val)
            end

            if flag and Config[flag] ~= nil then
                currentValue = Config[flag]
                updateVisuals(currentValue)
                task.spawn(callback, currentValue)
            end

            local slddragging = false
            SliderBG.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    slddragging = true
                    move(input)
                end
            end)

            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    slddragging = false
                    if flag then
                        Config[flag] = currentValue
                        SaveToFile()
                    end
                end
            end)

            UserInputService.InputChanged:Connect(function(input)
                if slddragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    move(input)
                end
            end)
        end

        return Elements
    end

    return WindowFunctions
end

return StudiosLib
